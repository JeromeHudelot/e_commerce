{% extends "base.html.twig" %}
{% block title  %} Admin Produit {% endblock %}

{% block body %}
	{{ parent() }}
	
	<div class="container">
	
		{% for message in app.flashes('success') %}
		
			{{ message }}
		
		{% endfor %}
	
		<table class="table table-striped">
		
			<thead>
				
				<tr>
				
					<th>Id Commande</th>
					<th>Client</th>
					<th>Prix total</th>
					<th>Poid total</th>
					<th>Nombre d'élément</th>
					<th>Créée le</th>
				
				</tr>
			
			</thead>
			<tbody>
				
				{% for commande in commandes %}
				
					<tr>
					
						<td><a href="{{path('admin.commande.show', {id : commande.id})}}">{{ commande.id }}</a></td>
						<td>{{ commande.client.firstname }} {{ commande.client.lastname }}</td>
						<td>{{ commande.price }} €</td>
						<td>{{ commande.weight/1000 }} kg</td>
						<td>{{ commande.nbElement }} unité</td>
						<td>{{ commande.createdat|date('d/m/Y') }}</td>
					</tr>
			
				{% endfor %}
			
			</tbody>
		
		</table>
	{{ knp_pagination_render(commandes) }}
	</div>

{% endblock %}