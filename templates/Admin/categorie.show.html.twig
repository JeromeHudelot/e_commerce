{% extends "base.html.twig" %}

{% block title  %} Pannel d'administration {% endblock %}


{% block body %}
	{{ parent() }}
	
		{{ cat.name }}
		
		<table>
			<thead>
				<tr>
					<th>Nom du produit</th>
					<th>Prix</th>
					<th>Poid</th>
				</tr>
			</thead>
			<tbody>
	
				{% for product in products %}
				
					<tr>
						<th>
							<a href="{{path('product_show', {slug : product.slug, id : product.id})}}">{{ product.name }}</a>
						</th>
						<th>
							{{ product.price }}
						</th>
						<th>
							{{ product.weight }}
						</th>
					</tr>
					
				{% endfor %}
				
			</tbody>
		</table>
	
{% endblock %}